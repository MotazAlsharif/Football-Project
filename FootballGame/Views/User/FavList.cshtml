@model IEnumerable<FootballGame.Models.Teams>

@{
    ViewData["Title"] = "FavList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>FavList</h1>
<a asp-action="TeamList" asp-controller="User">TeamList</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.captain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.coach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numberofPlayer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.captain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.coach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numberofPlayer)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
