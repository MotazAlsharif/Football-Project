@model FootballGame.Models.Players

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Players</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="skilllevel" class="control-label"></label>
                <input asp-for="skilllevel" class="form-control" />
                <span asp-validation-for="skilllevel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label  class="control-label"> Teams Name</label>

                <select name="TeamID" id="TeamID">
                    @for(int i=0;i<ViewBag.Teams.Count;i++)
                    {
                        <option value=@ViewBag.Teams[i].ID>@ViewBag.Teams[i].name</option>

                    }

                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
